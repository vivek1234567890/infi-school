<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.location %></td>
        <td><%= link_to 'Edit', edit_school_path(school), :class =>"btn btn-success" %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-success" %></td>
        <td><%= link_to 'Manage School', manage_school_school_path(school), :class =>"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path, :class =>"btn btn-success" %>
