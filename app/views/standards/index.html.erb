<p id="notice"><%= notice %></p>

<h1>Listing Standards</h1>

<table>
  <thead>
    <tr>
      <th>School</th>
      <th>Class name</th>
      <th>Min attendance mark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @standards.each do |standard| %>
      <tr>
        <td><%= standard.school_id %></td>
        <td><%= standard.class_name %></td>
        <td><%= standard.min_attendance_mark %></td>
        <td><%= link_to 'Show', standard %></td>
        <td><%= link_to 'Edit', edit_standard_path(standard) %></td>
        <td><%= link_to 'Destroy', standard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

