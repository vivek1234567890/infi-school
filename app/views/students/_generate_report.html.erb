<% if @is_attendance_record %>
  <% default = defaulers(@attendance_record.attendance_hash,@student) %>
  <h1><%=  @student.name %></h1>
  <h1>Defauler: <%= default[:defaulter] %></h1>
  <h1>Attendance Mark: <%= default[:weightage] %>%</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Standard</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @attendance_record.attendance_hash.each do |k,v| %>
        <tr>
          <td><%= k %></td>
          <td><%= v.present? ? @attendance_hash["#{v.first}"] : "No Attendance Mark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1><%=  @student.name %></h1>
  <p style="text-align: center;"><h3>There are no attendance records present.</h3></p>
<% end %>